{% extends('index.html.twig') %}

{% block body %}
    <script src="//cdn.datatables.net/plug-ins/1.10.19/sorting/date-euro.js"></script>
    <script src="https://cdn.datatables.net/rowreorder/1.2.5/js/dataTables.rowReorder.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>

    <script>
        function format ( d ) {
            return '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;">'+
                '<tr>'+
                '<td>'+d.data+'</td>'+
                '</tr>'+
                '</table>';
        }

        $(document).ready(function() {
            let table = $('#table-one').DataTable({
                'processing': true,
                "ajax": {
                    "url": "/analytics/data",
                    dataSrc:""
                },
                'language': {
                    'url': '//cdn.datatables.net/plug-ins/1.10.19/i18n/Russian.json',
                },
                'columnDefs': [
                    {
                        'type': 'date-euro',
                        'targets': 0,

                    },
                ],
                "order": [[ 0, "desc" ]],
                "lengthMenu": [[10, 100, 500, 1000, -1], [10, 100, 500, 1000, "Все"]],
                "pageLength": 500,
                // "initComplete": function(settings, json) {
                // }
                columns: [
                    { data: "date", "className": "table-date" },
                    { data: "user.full_name", "className": "table-user" },
                    { data: "type", "className": "table-type" },
                    { data: "channel", "className": "table-channel" },
                    { data: "text", "className": "table-text" },
                    { data: "data", "className": "table-data", "visible": false },
                ],
                // rowReorder: {
                //     selector: 'td:nth-child(2)'
                // },
                responsive: true
            });


            $('#table-one tbody').on( 'click', 'tr', function () {
                $(this).toggleClass('selected');
                var tr = $(this).closest('tr');
                var row = table.row( tr );

                if ( row.child.isShown() ) {
                    row.child.hide();
                }
                else {
                    row.child( format(row.data()) ).show();
                }
            } );
        });
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css?family=Source+Code+Pro');

        td {
            word-break: break-word;
            font-size: 11px;
            font-family: 'Source Code Pro', monospace;
        }

        table#table-one {
            width: 100%;
            font-size: 14px;
            font-family: 'Source Code Pro', monospace;
        }

        .table-date {
            width: 20%;
        }

        .table-text {
            width: 50%;
        }

        .table-wrapper {

        }

        table.dataTable tbody tr.selected {
            background-color: #d8f3d1;
        }
    </style>

    <div class="table-wrapper">
        <table id="table-one" class="table table-bordered">
            <thead>
            <tr>
                <th>Дата</th>
                <th>Пользователь</th>
                <th>Тип</th>
                <th>Канал</th>
                <th>Текст</th>
                <th>Данные</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Дата</th>
                <th>Пользователь</th>
                <th>Тип</th>
                <th>Канал</th>
                <th>Текст</th>
                <th>Данные</th>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}