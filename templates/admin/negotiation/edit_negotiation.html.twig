{% extends "index.html.twig" %}
{% trans_default_domain 'admin' %}

{% block title %}
    {{ 'admin.negotiation.edit.title'|trans }} | {{ 'admin.negotiation.edit.title'|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <strong>
            {{ 'admin.negotiation.edit.title'|trans }}
        </strong>
        <hr>
        {{ form_start(form) }}
        <table>
            <tr>
                <td>{{ form_label(form.name) }}</td>
                <td>{{ form_widget(form.name) }}</td>
                <td>{{ form_errors(form.name) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.url) }}</td>
                <td>{{ form_widget(form.url) }}</td>
                <td>{{ form_errors(form.url) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.tg_command) }}</td>
                <td>{{ form_widget(form.tg_command) }}</td>
                <td>{{ form_errors(form.tg_command) }}</td>
            </tr>
            <tr class="text-center">
                <td colspan="2">{{ form_widget(form.submit, { 'label': 'negotiation_type.button.edit' }) }}</td>
            </tr>
        </table>
        {{ form_end(form) }}
    {% endif %}
{% endblock %}