{% extends "index.html.twig" %}
{% trans_default_domain 'summoners' %}

{% block title %}
    {{ 'summoner.title'|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
    {% if summoner is not null %}

        {#<img src="http://ddragon.leagueoflegends.com/cdn/6.24.1/img/profileicon/{{ summoner.profileIconId }}.png">#}

        <div class="media">
            <div class="media-left">
                <div class="card" style="width: 129px;">
                    <img class="card-img-top" src="{{ summonerProfileImg }}">
                    <span class="level" title="">{{ summoner.summonerLevel }}</span>
                </div>
            </div>
            <div class="media-body" style="margin-left: 15px;">
                <h4 class="media-heading">{{ summoner.name }}</h4>
                id: {{ summoner.id }}<br>
                profileIconId: {{ summoner.profileIconId }}<br>
                name: {{ summoner.name }}<br>
                summonerLevel: {{ summoner.summonerLevel }}<br>
                accountId: {{ summoner.accountId }}<br>
                revisionDate: {{ summoner.revisionDate|date("d.m.Y H:i:s")}}
            </div>
        </div>
    {% endif %}

    <hr>

    {% if matches is not null %}
        Всего игр: {{ matches.totalGames }}
        <hr>
        {% for match in matches.matches|slice(0, 8) %}
            <div style="display:none;">
                platformId: {{ match.platformId }}<br>
                gameId: {{ match.gameId }}<br>
                champion: {{ match.champion }}<br>
                championName: {{ match.heroName }}<br>
                queue: {{ match.queue }}<br>
                season: {{ match.season }}<br>
                timestamp: {{ match.timestamp|date("d.m.Y H:i:s") }}<br>
                role: {{ match.role }}<br>
                lane: {{ match.lane }}<br>
                <br>
            </div>

            {% if match.win %}
                {% set resultClass = "notice notice-success" %}
            {% else %}
                {% set resultClass = "notice notice-danger" %}
            {% endif %}

            <div class="{{ resultClass }}">
                Чемпион: {{ match.heroName }} <br>
                Роль: {{ match.role }}<br>
                Линия: {{ match.lane }}<br>
                Время завершения матча: {{ match.timestamp|date("d.m.Y H:i:s") }}<br>
            </div>


        {% endfor %}



            {#<div class="notice notice-info">#}
                {#<strong>Notice</strong> notice-info#}
            {#</div>#}
            {#<div class="notice notice-warning">#}
                {#<strong>Notice</strong> notice-warning#}
            {#</div>#}
            {#<div class="notice notice-lg">#}
                {#<strong>Big notice</strong> notice-lg#}
            {#</div>#}
            {#<div class="notice notice-sm">#}
                {#<strong>Small notice</strong> notice-sm#}
            {#</div>#}

    {% endif %}

{% endblock %}